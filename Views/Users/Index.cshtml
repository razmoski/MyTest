@model HighfieldTest.Views.Models.UserColoursViewModel
@{
    ViewData["Title"] = "Users Colours & Ages";
}

<h2>Users</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Date Of Birth</td>
            <td>Origional Age</td>
            <td>Age Plus Twenty</td>
            <td>Email</td>
            <td>Favourite Colour</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                @Html.HiddenFor(modelItem => item.Id)
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OriginalAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgePlusTwenty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FavouriteColour)
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Colours</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Colour</td>
            <td>Count</td>
        </tr>

    </thead>
    <tbody>
        @foreach (var colour in Model.TopColours)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => colour.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => colour.Count)
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Users" asp-action="Save" class="btn btn-primary">Save</a>